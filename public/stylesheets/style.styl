body
	font-family: Georgia, Serif
	font-size: 20px
	padding: 20px
	line-height: 1.3
	background-color: #ddd
	color: #000

h1, h2, h3, h4 
	font-family: Helvetica, Sans-Serif
	margin: 0
	margin-bottom: 0.5em

p
	max-width: 600px

ul li
	margin-bottom: 0.5em
	font-size: 1.8em


.buttonbar 
	display: flex
	margin-left: 20px

.buttonbar .button 
	font-family: Helvetica, Sans-Serif
	background-color: #eee
	min-width: 30px
	text-align: center
	padding: 8px 15px
	margin-right: 5px
	box-sizing: border-box
	cursor: pointer
	border-radius: 5px
	border-bottom-left-radius: 0
	border-bottom-right-radius: 0
	font-size: 14px
	line-height: 24px
	-webkit-user-select: none
	user-select: none
	border: 1px solid rgba(0,0,0,0.1)
	border-bottom: none

.buttonbar .button.active 
	background-color: #fff
	cursor: default
	font-weight: bold
	font-size: 20px
	padding: 10px 15px
	margin-top: -2px
	margin-bottom: -1px
	border-color: rgba(0,0,0,0.3)


.tab 
	background-color: #fff
	padding: 30px
	border-radius: 5px
	border: 1px solid rgba(0,0,0,0.3)
	min-height: 600px

.tab .tab
	padding-bottom: 100px
	min-height: 556px
.tab .tab .tab
	padding: 30px
	min-height: 0px



.tab .notes
	display: none

.tab-aboutme
	align-items: center
		
.tab-aboutme img
	width: 100%
	max-width: 1050px
	height: auto
	border: 1px solid rgba(0,0,0,0.3)
	border-radius: 3px


.slide
	display: flex
	flex-direction: column
	justify-content: center
	align-content: space-between
	padding: 30px 100px

.tab .tab-examples
	padding-bottom: 30px


.tab-examples .nested-region
	margin-left: 42px

.tab-examples .tab
	width: 400px
	height: 195px
	background-position: center right
	background-repeat: no-repeat

.tab-examples .tab-apple
	background-image: url(/images/apple.png)
.tab-examples .tab-banana
	background-image: url(/images/banana.png)
.tab-examples .tab-carrot
	background-image: url(/images/carrot.png)

.tab-moreexamples
	font-size: 12px